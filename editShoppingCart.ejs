<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shopping Cart Products</title>
    <link rel="stylesheet" href="productcss" /></head
  >/
  <body>
    <h2>ShoppingCart Items</h2>
    <form
      action="updateShoppingCart.htm"
      onsubmit="return validateShoppingCart();"
      method="POST"
    >
    
      <table>
        <tr>
          <th>Buy Online Products from ShoppingCart</th>
        </tr>
        <tr>
          <td><td><input type="hidden" name="doc_id" value="<%=shoppingcart._id %>"></td></td>
        </tr>
        <tr>
          <td>ProductName:</td>
          <td>
            <input
              type="text"
              name="p_name"
              id="p_name"
              value="<%=shoppingcart.p_name%>"
            />
          </td>
        </tr>
        <tr>
          <td>Price:</td>
          <td>
            <input
              type="text"
              name="unit_price"
              id="unit_price"
              value="<%=shoppingcart.unit_price %>"
            />
          </td>
        </tr>
        <tr>
          <td>Quantity:</td>
          <td>
            <input
              type="text"
              name="quantity"
              id="quantity"
              value="<%=shoppingcart.quantity %>"
            />
          </td>
        </tr>
        <tr>
          <td>&nbsp;</td>
        </tr>
        <tr>
          <td colspan="2" style="text-align: center">
            <input type="submit" value="           Save          " />
          </td>
        </tr>
      </table>
    </form>
    <script>
      function validateShoppingCart(){
        console.log("validateShoppingCart().....");
        let valid = true;
    
        let productName = document.getElementById("p_name").value;
        let unitPrice = document.getElementById("unit_price").value;
        let totalQuantity = document.getElementById("quantity").value;
    
        console.log("p_name ="+productName);
        console.log("unit_price ="+unitPrice);
        console.log("quantity ="+totalQuantity);
    
        if(productName == ""){
          console.log("productName is empty");
          document.getElementById("p_name").focus();
          valid = false;
          return valid;
        }
        if(unitPrice == ""){
          console.log("unitPrice is empty");
          document.getElementById("unit_price").focus();
          valid = false;
          return valid;
        }
        if(totalQuantity == ""){
          console.log("totalQuantity is empty");
          document.getElementById("quantity").focus();
          valid = false;
          return valid;
        }
      }
      console.log('End validateShoppingCart')
    </script>
  </body>
</html>
